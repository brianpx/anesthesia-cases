<div class="row">
  <div class="col-xs-12">
    <h1>Comorbidities</h1>
  </div>

  <div class="col-xs-12">
    <table class="table table-striped table-hover table-condensed table-responsive table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Beginning Age</th>
          <th>Slope</th>
          <th>Slope Exponent</th>
          <th>Vertical Offset</th>
          <th>Male Risk</th>
          <th>Female Risk</th>
          <th>Smoking</th>
          <th>Diabetes</th>
          <th>Hypertension</th>
          <th>Hyperlipidemia</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
      <% @comorbidities.each do |comorbidity| %>
        <tr>
        <td><%= comorbidity.name %></td>
        <td><%= comorbidity.beginning_age %></td>
        <td><%= comorbidity.slope %></td>
        <td><%= comorbidity.exponent %></td>
        <td><%= comorbidity.vertical_offset %></td>
        <td><%= comorbidity.male_risk %></td>
        <td><%= comorbidity.female_risk %></td>
        <td><%= comorbidity.smoking %></td>
        <td><%= comorbidity.diabetes %></td>
        <td><%= comorbidity.hypertension %></td>
        <td><%= comorbidity.hyperlipidemia %></td>

        <td colspan="2">
          <%= link_to 'Edit', edit_comorbidity_path(comorbidity), :class => 'btn btn-primary btn-xs' %>
          <%= link_to 'Destroy', comorbidity, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= link_to 'Add A Comorbidity', new_comorbidity_path, :class => 'btn btn-primary' %>
  </div>
</div>

